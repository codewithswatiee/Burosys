{%- liquid
  assign cart_icon = cart_icon
  assign app_blocks = app_blocks
-%}

<div class="account-actions-enhanced">
  <div class="account-actions-enhanced__main-menu">
    <header class="account-actions-enhanced__header">
      <h2
        id="account-drawer-heading"
        class="account-actions-enhanced__title h5"
      >
        {% if customer %}
          Hello
        {% else %}
          WELCOME TO BUROSYS!
        {% endif %}
      </h2>
      {% if customer %}
        <span class="account-actions-enhanced__email">
          {% if customer.email %}
            {{ customer.email }} !
          {% elsif customer.phone %}
            {{ customer.phone }} !
          {% endif %}
        </span>
      {% endif %}
    </header>

    {% comment %} Cart Section {% endcomment %}

    <div class="account-actions-enhanced__section">
      <a
        href="#swym-wishlist"
        class="account-actions-enhanced__cart-link button-secondary"
      >
        <span>My Projects</span>
      </a>
    </div>

    <div class="account-actions-enhanced__section">
      <a
        href="{{ routes.cart_url }}"
        class="account-actions-enhanced__cart-link button-secondary"
      >
        <span>{{ 'accessibility.cart' | t }}</span>
      </a>
    </div>

    {% unless customer %}
      <div
        class="account-actions-enhanced__sign-ins"
        data-skip-subtree-update="true"
      >
        <div class="account-actions-enhanced__auth-buttons">
          <a
            href="{% if request.design_mode %}{{ routes.account_url }}{% else %}{{ routes.storefront_login_url }}{% endif %}"
            class="account-actions-enhanced__auth-button"
          >
            <span class="account-actions-enhanced__icon" aria-hidden="true">
              {{- 'icon-account.svg' | inline_asset_content -}}
            </span>
            Login
          </a>
        </div>
      </div>
    {% else %}
      {% comment %} Logout Button {% endcomment %}
      <div class="account-actions-enhanced__sign-ins">
        <a
          href="{{ routes.account_logout_url }}"
          class="account-actions-enhanced__auth-button account-actions-enhanced__auth-button--logout"
        >
          <span
            class="account-actions-enhanced__icon"
            aria-hidden="true"
          >
            {{- 'icon-account.svg' | inline_asset_content -}}
          </span>
          Logout
        </a>
      </div>
    {% endunless %}

    {% comment %} App Blocks Section {% endcomment %}
    {% if app_blocks != blank %}
      <div class="account-actions-enhanced__app-blocks">
        {{ app_blocks }}
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .account-actions-enhanced {
    background-color: var(--color-background);
    display: flex;
    flex-direction: column;
    position: relative;
    transition: height var(--animation-values);
  }

  .account-actions-enhanced__header {
    padding: var(--padding-xl);
    padding-bottom: var(--padding-md);
    display: flex;
    flex-direction: row;
    gap: 7px;
    color: #838383;
    text-transform: none !important;
    align-items: baseline;
  }

  .account-actions-enhanced__title {
    --font-h5--size: 22px !important;
    font-family: 'matter-light' !important;
    margin: 0;
    font-weight: 300 !important;
    color: #838383 !important;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-transform: none !important;
  }

  .account-actions-enhanced__email {
    font-family: 'matter-light' !important;
    display: flex;
    align-items: center;
    gap: var(--gap-2xs);
    color: #838383 !important;
    max-width: var(--account-actions-max-width);
    word-break: break-all;
    font-size: 22px !important;
  }

  .account-actions-enhanced__section {
    padding: 0.2rem 0.8rem;
  }

  .account-actions-enhanced__cart-link,
  .account-actions-enhanced__link {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 16px;
    gap: var(--gap-sm);
    text-decoration: none;
    padding: var(--padding-sm) var(--padding-md);
  }

  .account-actions-enhanced__cart-icon {
    display: flex;
    align-items: center;
    width: var(--icon-size-sm);
    height: var(--icon-size-sm);
  }

  .account-actions-enhanced__cart-icon cart-icon {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .account-actions-enhanced__icon {
    display: flex;
    width: var(--icon-size-sm);
    height: var(--icon-size-sm);
  }

  .account-actions-enhanced__sign-ins {
    padding: 0.2rem 0.8rem;
    display: flex;
    flex-direction: column;
    gap: var(--gap-sm);
    margin-top: 30px;
  }

  .account-actions-enhanced__auth-buttons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--gap-md);
  }

  .account-actions-enhanced__auth-button {
    display: flex;
    align-items: center;
    gap: var(--gap-xs);
    padding: var(--padding-sm) var(--padding-md);
    text-decoration: none;
    color: var(--color-foreground);
    background: transparent;
    border: none;
    cursor: pointer;
    transition: opacity var(--animation-speed) var(--animation-easing);
  }

  .account-actions-enhanced__auth-button:hover {
    opacity: 0.7;
  }

  .account-actions-enhanced__auth-button--logout {
    grid-column: 1 / -1;
  }

  .account-actions-enhanced__sign-in-text {
    display: inline;
  }

  .account-actions-enhanced__fallback-text {
    display: none;
  }

  .account-actions-enhanced__shop-login {
    --buttons-radius: var(--style-border-radius-buttons-primary);
  }

  .account-actions-enhanced__app-blocks {
    padding: var(--padding-md) var(--padding-xl);
    border-top: 1px solid var(--color-border);
  }

  /* Safari < 16.4 outline bug workaround */
  @supports not (background-color: rgb(from red 150 g b / alpha)) {
    .account-actions-enhanced :is(a.button, a.button-secondary):focus-visible {
      outline: none;
      overflow: visible;
      position: relative;
    }

    .account-actions-enhanced :is(a.button, a.button-secondary):focus-visible::after {
      content: '';
      position: absolute;
      inset: calc(-1 * var(--focus-outline-offset));
      border: var(--focus-outline-width) solid currentColor;
      border-radius: var(--style-border-radius-buttons-secondary);
      display: inherit;
    }

    .account-actions-enhanced a.button:focus-visible::after {
      border-color: var(--button-background-color);
      border-radius: var(--style-border-radius-buttons-primary);
    }
  }
{% endstylesheet %}
