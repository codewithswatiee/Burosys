{{ 'section-customer-stories.css' | asset_url | stylesheet_tag }}

<div class="customer-stories-section">
  <div class="customer-stories__header">
    {%- if section.settings.heading != blank -%}
      <h2 class="customer-stories__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    {%- if section.settings.subheading != blank -%}
      <p class="customer-stories__subheading">{{ section.settings.subheading }}</p>
    {%- endif -%}
  </div>

  {%- if section.blocks.size > 0 -%}
    <div class="customer-stories__grid">
      {%- for block in section.blocks -%}
        {%- liquid
          assign use_blog_post = false
          assign story_image = block.settings.image
          assign story_label = block.settings.label
          assign story_title = block.settings.title
          assign story_description = block.settings.description
          assign story_link_text = block.settings.link_text
          assign story_link_url = block.settings.link_url
          
          if block.settings.blog_post != blank
            assign use_blog_post = true
            assign selected_article = articles[block.settings.blog_post]
            
            if selected_article
              if block.settings.use_blog_image and selected_article.image
                assign story_image = selected_article.image
              endif
              
              if block.settings.use_blog_title and selected_article.title != blank
                assign story_title = selected_article.title
              endif
              
              if block.settings.use_blog_excerpt and selected_article.excerpt != blank
                assign story_description = selected_article.excerpt | strip_html | truncate: 150
              endif
              
              if block.settings.use_blog_link
                assign story_link_url = selected_article.url
                if story_link_text == blank or block.settings.use_blog_link_text
                  assign story_link_text = 'Read Article'
                endif
              endif
              
              if block.settings.use_blog_date and selected_article.published_at
                assign story_label = selected_article.published_at | date: '%B %d, %Y'
              endif
            endif
          endif
        -%}
        
        <div class="story-item" {{ block.shopify_attributes }}>
          <div class="story-item__image-wrapper">
            {%- if story_image != blank -%}
              <img
                srcset="{{ story_image | image_url: width: 400 }} 400w,
                        {{ story_image | image_url: width: 600 }} 600w,
                        {{ story_image | image_url: width: 800 }} 800w"
                src="{{ story_image | image_url: width: 600 }}"
                alt="{{ story_image.alt | escape }}"
                loading="lazy"
                width="{{ story_image.width }}"
                height="{{ story_image.height }}"
                class="story-item__image"
              >
            {%- else -%}
              <div class="story-item__placeholder">
                {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}
          </div>

          <div class="story-item__content">
            {%- if story_label != blank -%}
              <p class="story-item__label">{{ story_label }}</p>
            {%- endif -%}

            {%- if story_title != blank -%}
              <h3 class="story-item__title">{{ story_title }}</h3>
            {%- endif -%}

            {%- if story_description != blank -%}
              <p class="story-item__description">{{ story_description }}</p>
            {%- endif -%}

            {%- if story_link_text != blank -%}
              <a 
                href="{{ story_link_url | default: '#' }}" 
                class="story-item__link"
                {%- if use_blog_post %} target="_self"{%- endif -%}
              >
                {{ story_link_text }}
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

<style>
  .customer-stories-section {
    background-color: {{ section.settings.section_background }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .customer-stories__heading {
    color: {{ section.settings.heading_color }};
  }

  .customer-stories__subheading {
    color: {{ section.settings.subheading_color }};
  }

  .story-item__label {
    color: {{ section.settings.label_color }};
  }

  .story-item__title {
    color: {{ section.settings.title_color }};
  }

  .story-item__description {
    color: {{ section.settings.description_color }};
  }

  .story-item__link {
    color: {{ section.settings.link_color }};
  }

  .story-item__link:hover {
    color: {{ section.settings.link_hover_color }};
  }
</style>

<script src="{{ 'customer-stories.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Customer Stories",
  "tag": "section",
  "class": "section-customer-stories",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "CUSTOMER STORIES"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore chairs tailored to your interests"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "section_background",
      "label": "Section Background",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#cccccc"
    },
    {
      "type": "color",
      "id": "label_color",
      "label": "Card Label Color",
      "default": "#999999"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Card Title Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Card Description Color",
      "default": "#cccccc"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link Hover Color",
      "default": "#cccccc"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Story Card",
      "settings": [
        {
          "type": "header",
          "content": "Blog Post Integration"
        },
        {
          "type": "article",
          "id": "blog_post",
          "label": "Select Blog Post",
          "info": "Choose a blog post to auto-populate content. Manual fields below will be used as fallback."
        },
        {
          "type": "checkbox",
          "id": "use_blog_image",
          "label": "Use blog post featured image",
          "default": true,
          "info": "When enabled, uses the blog post's featured image instead of manual image"
        },
        {
          "type": "checkbox",
          "id": "use_blog_title",
          "label": "Use blog post title",
          "default": true,
          "info": "When enabled, uses the blog post's title instead of manual title"
        },
        {
          "type": "checkbox",
          "id": "use_blog_excerpt",
          "label": "Use blog post excerpt",
          "default": true,
          "info": "When enabled, uses the blog post's excerpt instead of manual description"
        },
        {
          "type": "checkbox",
          "id": "use_blog_date",
          "label": "Use blog post date as label",
          "default": false,
          "info": "When enabled, uses the blog post's publish date instead of manual label"
        },
        {
          "type": "checkbox",
          "id": "use_blog_link",
          "label": "Link to blog post",
          "default": true,
          "info": "When enabled, button links to the selected blog post"
        },
        {
          "type": "checkbox",
          "id": "use_blog_link_text",
          "label": "Use default link text for blog posts",
          "default": false,
          "info": "When enabled, uses 'Read Article' as button text for blog posts"
        },
        {
          "type": "header",
          "content": "Manual Content (Fallback)"
        },
        {
          "type": "paragraph",
          "content": "The fields below will be used when no blog post is selected, or when the corresponding 'Use blog post...' option is disabled above."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label (Small Text)",
          "default": "THE DESIGN"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Lorem ipsum Lorem ipsum"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "At Burosys, we create our workspace furniture with you in mind."
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "READ MORE"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Stories",
      "blocks": [
        {
          "type": "story"
        },
        {
          "type": "story"
        },
        {
          "type": "story"
        },
        {
          "type": "story"
        }
      ]
    }
  ]
}
{% endschema %}
