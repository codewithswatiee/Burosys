  "class": "luxury-hero-carousel-section",
  "max_blocks": 10,
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "Show navigation arrows",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "checkbox",
          "id": "enable_overlay",
          "label": "Enable overlay",
          "default": true
        },
        {
          "type": "color",
          "id": "overlay_color",
          "label": "Overlay color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "label": "Overlay opacity",
          "min": 0,
          "max": 80,
          "step": 5,
          "unit": "%",
          "default": 40
        },
        {
          "type": "header",
          "content": "Logos"
        },
        {
          "type": "image_picker",
          "id": "logo_1",
          "label": "Logo 1",
          "info": "Left logo"
        },
        
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "A Symphony of Italian Excellence"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "A BOLD NEW ERA OF LUXURY GAME TABLES"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Carousel",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
