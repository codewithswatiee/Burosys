<script src="{{ 'slideshow.js' | asset_url }}" type="module" fetchpriority="low" defer></script>

{% liquid
  assign autoplay = section.settings.autoplay
  assign autoplay_speed = 2
%}

<div class="luxury-hero-carousel-wrapper">
  <slideshow-component
    class="luxury-hero-carousel"
    role="region"
    aria-label="Hero carousel"
    data-autoplay="{{ autoplay }}"
    data-autoplay-speed="{{ autoplay_speed }}"
  >
    <slideshow-container>
      <slideshow-slides class="luxury-hero-slides">
        {% for block in section.blocks %}
          <slideshow-slide
            class="luxury-hero-slide"
            role="group"
            aria-roledescription="slide"
            aria-label="Slide {{ forloop.index }} of {{ section.blocks.size }}"
            {% if forloop.index == 1 %}
              id="luxury-hero-slide-{{ forloop.index }}"
            {% else %}
              id="luxury-hero-slide-{{ forloop.index }}"
              aria-hidden="true"
            {% endif %}
            {{ block.shopify_attributes }}
          >
            {%- if block.settings.image != blank -%}
              <div class="luxury-hero-slide__media">
                <img
                  srcset="
                    {% if block.settings.image.width >= 375 %}{{ block.settings.image | image_url: width: 375 }} 375w,{% endif %}
                    {% if block.settings.image.width >= 750 %}{{ block.settings.image | image_url: width: 750 }} 750w,{% endif %}
                    {% if block.settings.image.width >= 1100 %}{{ block.settings.image | image_url: width: 1100 }} 1100w,{% endif %}
                    {% if block.settings.image.width >= 1500 %}{{ block.settings.image | image_url: width: 1500 }} 1500w,{% endif %}
                    {% if block.settings.image.width >= 1780 %}{{ block.settings.image | image_url: width: 1780 }} 1780w,{% endif %}
                    {% if block.settings.image.width >= 2000 %}{{ block.settings.image | image_url: width: 2000 }} 2000w,{% endif %}
                    {% if block.settings.image.width >= 3000 %}{{ block.settings.image | image_url: width: 3000 }} 3000w,{% endif %}
                    {{ block.settings.image | image_url }} {{ block.settings.image.width }}w
                  "
                  src="{{ block.settings.image | image_url: width: 1500 }}"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  fetchpriority="{% if forloop.first %}high{% else %}low{% endif %}"
                  sizes="100vw"
                  alt="{{ block.settings.image.alt | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
                
                {%- if block.settings.enable_overlay -%}
                  <div 
                    class="luxury-hero-slide__overlay" 
                    style="--overlay-opacity: {{ block.settings.overlay_opacity }}%; --overlay-color: {{ block.settings.overlay_color }};"
                  ></div>
                {%- endif -%}
              </div>
            {%- else -%}
              <div class="luxury-hero-slide__media luxury-hero-slide__placeholder">
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- if block.settings.enable_overlay -%}
                  <div 
                    class="luxury-hero-slide__overlay" 
                    style="--overlay-opacity: {{ block.settings.overlay_opacity }}%; --overlay-color: {{ block.settings.overlay_color }};"
                  ></div>
                {%- endif -%}
              </div>
            {%- endif -%}

            <div class="luxury-hero-slide__content">
              <div class="luxury-hero-slide__content-inner">
                {%- if block.settings.logo_1 != blank -%}
                  <div class="luxury-hero-slide__logos">
                    <img
                      src="{{ block.settings.logo_1 | image_url: width: 400 }}"
                      alt="{{ block.settings.logo_1.alt | escape }}"
                      width="{{ block.settings.logo_1.width }}"
                      height="{{ block.settings.logo_1.height }}"
                      loading="lazy"
                      class="luxury-hero-slide__logo"
                    >
                  </div>
                {%- endif -%}

                {%- if block.settings.heading != blank -%}
                  <h1 class="luxury-hero-slide__heading">
                    {{ block.settings.heading }}
                  </h1>
                {%- endif -%}

                {%- if block.settings.subheading != blank -%}
                  <p class="luxury-hero-slide__subheading">
                    {{ block.settings.subheading }}
                  </p>
                {%- endif -%}

                {%- if block.settings.button_label != blank -%}
                  <a 
                    href="{{ block.settings.button_link | default: '#' }}" 
                    class="luxury-hero-slide__button"
                  >
                    {{ block.settings.button_label }}
                  </a>
                {%- endif -%}
              </div>
            </div>
          </slideshow-slide>
        {% endfor %}
      </slideshow-slides>

      {%- if section.blocks.size > 1 -%}
        <slideshow-pagination class="luxury-hero-pagination">
          {%- for block in section.blocks -%}
            <button
              type="button"
              class="luxury-hero-pagination__dot"
                aria-label="Load slide {{ forloop.index }} of {{ section.blocks.size }}"
              aria-controls="luxury-hero-slide-{{ forloop.index }}"
              {% if forloop.first %}aria-current="true"{% endif %}
            >
              <span class="luxury-hero-pagination__dot-inner"></span>
            </button>
          {%- endfor -%}
        </slideshow-pagination>

        {%- if section.settings.show_arrows -%}
          <slideshow-arrows class="luxury-hero-arrows">
            <button
              type="button"
              class="luxury-hero-arrow luxury-hero-arrow--prev"
                aria-label="Previous slide"
            >
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <button
              type="button"
              class="luxury-hero-arrow luxury-hero-arrow--next"
                aria-label="Next slide"
            >
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </slideshow-arrows>
        {%- endif -%}
      {%- endif -%}
    </slideshow-container>
  </slideshow-component>
</div>
 
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add a small delay to ensure all elements are rendered
    setTimeout(function() {
      initLuxuryHeroCarousel();
    }, 100);
  });

  function initLuxuryHeroCarousel() {
    const wrapper = document.querySelector('.luxury-hero-carousel-wrapper');
    if (!wrapper) {
      console.warn('Luxury hero carousel wrapper not found');
      return;
    }

    const carousel = wrapper.querySelector('.luxury-hero-carousel');
    const slides = Array.from(wrapper.querySelectorAll('.luxury-hero-slide'));
    const dots = Array.from(wrapper.querySelectorAll('.luxury-hero-pagination__dot'));
    const prevBtn = wrapper.querySelector('.luxury-hero-arrow--prev');
    const nextBtn = wrapper.querySelector('.luxury-hero-arrow--next');

    console.log('Carousel initialized with', slides.length, 'slides');

    let current = slides.findIndex((s) => s.getAttribute('aria-hidden') !== 'true');
    if (current === -1) current = 0;

    function show(idx) {
      idx = (idx + slides.length) % slides.length;
      slides.forEach((s, i) => {
        if (i === idx) {
          s.removeAttribute('aria-hidden');
        } else {
          s.setAttribute('aria-hidden', 'true');
        }
      });
      dots.forEach((d, i) => {
        if (i === idx) d.setAttribute('aria-current', 'true'); else d.removeAttribute('aria-current');
      });
      current = idx;
    }

    if (dots.length) {
      dots.forEach((dot, i) => dot.addEventListener('click', () => show(i)));
    }

    if (prevBtn) prevBtn.addEventListener('click', () => show(current - 1));
    if (nextBtn) nextBtn.addEventListener('click', () => show(current + 1));

    // Autoplay
    const autoplayAttr = carousel ? carousel.getAttribute('data-autoplay') : null;
    const autoplay = autoplayAttr === 'true' || autoplayAttr === 'true';
    const speedSec = parseInt(carousel ? carousel.getAttribute('data-autoplay-speed') : null) || 5;
    const speed = speedSec * 1000;

    console.log('Autoplay enabled:', autoplay, 'Speed:', speed + 'ms', 'Slides count:', slides.length);

    let timer = null;
    let isHovered = false;
    
    function startAutoplay() {
      if (!autoplay || slides.length <= 1 || isHovered) {
        console.log('Autoplay not started:', { autoplay, slidesCount: slides.length, isHovered });
        return;
      }
      stopAutoplay();
      console.log('Starting autoplay with interval:', speed);
      timer = setInterval(() => {
        console.log('Auto-advancing to slide:', (current + 1) % slides.length);
        show(current + 1);
      }, speed);
    }
    
    function stopAutoplay() { 
      if (timer) { 
        console.log('Stopping autoplay');
        clearInterval(timer); 
        timer = null; 
      } 
    }

    // Improved mouse event handling
    wrapper.addEventListener('mouseenter', function() {
      isHovered = true;
      stopAutoplay();
    });
    
    wrapper.addEventListener('mouseleave', function() {
      isHovered = false;
      // Add a small delay before restarting autoplay
      setTimeout(startAutoplay, 500);
    });

    // Initialize
    show(current);
    
    // Start autoplay after a brief delay
    if (autoplay && slides.length > 1) {
      setTimeout(startAutoplay, 1000);
    }
  }
</script>

{% stylesheet %}
  .luxury-hero-carousel-wrapper {
    position: relative;
    width: 100%;
    height: 90vh;
    min-height: 600px;
    overflow: hidden;
  }

  .luxury-hero-carousel {
    width: 100%;
    height: 100%;
  }

  slideshow-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .luxury-hero-slides {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    overflow: hidden;
  }

  .luxury-hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.8s ease, visibility 0.8s ease;
  }

  .luxury-hero-slide:not([aria-hidden='true']) {
    opacity: 1;
    visibility: visible;
    position: relative;
    border-radius: 0px;
  }

  .luxury-hero-slide__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .luxury-hero-slide__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: 0;
  }

  .luxury-hero-slide__placeholder {
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .luxury-hero-slide__placeholder svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  .luxury-hero-slide__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--overlay-color, #000);
    opacity: calc(var(--overlay-opacity, 40) / 100);
    z-index: 1;
    pointer-events: none;
  }

  .luxury-hero-slide__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    padding: 4rem 2rem;
    display: flex;
    justify-content: center;
    align-items: flex-end;
  }

  .luxury-hero-slide__content-inner {
    text-align: center;
    color: #fff;
    max-width: 1200px;
    width: 100%;
    margin-bottom: 2rem;
  }

  .luxury-hero-slide__logos {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .luxury-hero-slide__logo {
    height: 95px;
    width: auto;
    object-fit: contain;
    filter: brightness(0) invert(1);
  }

  .luxury-hero-slide__logo-divider {
    font-size: 2rem;
    font-weight: 300;
    color: #fff;
    opacity: 0.6;
  }

  .luxury-hero-slide__heading {
    font-size: 52px;
    font-weight: 400;
    text-transform: capitalize !important;
    line-height: 1.2;
    margin: 0 0 1rem 0;
    letter-spacing: -0.02em;
  }

  .luxury-hero-slide__subheading {
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin: 0 0 2rem 0;
    opacity: 0.9;
  }

  .luxury-hero-slide__button {
    display: inline-block;
    padding: 0.875rem 2.5rem;
    background: transparent;
    border: 2px solid #fff;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.3s ease;
    border-radius: 0;
  }

  .luxury-hero-slide__button:hover {
    background: #fff;
    color: #000;
  }

  /* Pagination Dots */
  .luxury-hero-pagination {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    display: flex;
    gap: 2px;
    align-items: center;
  }

  .luxury-hero-pagination__dot {
    background: transparent;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .luxury-hero-pagination__dot-inner {
    display: block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    transition: all 0.3s ease;
  }

  .luxury-hero-pagination__dot[aria-current='true'] .luxury-hero-pagination__dot-inner {
    background: #B5B5B5;
    width: 18px;
    height: 10px;
    border-radius: 30px;
  }

  .luxury-hero-pagination__dot:hover .luxury-hero-pagination__dot-inner {
    background: rgba(255, 255, 255, 0.7);
  }

  /* Navigation Arrows */
  .luxury-hero-arrows {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    z-index: 3;
    display: flex;
    justify-content: space-between;
    padding: 0 2rem;
    pointer-events: none;
  }

  .luxury-hero-arrow {
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: #fff;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    pointer-events: auto;
    backdrop-filter: blur(10px);
  }

  .luxury-hero-arrow:hover {
    background: rgba(255, 255, 255, 0.25);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .luxury-hero-arrow svg {
    width: 24px;
    height: 24px;
  }

  /* Responsive */
  @media screen and (max-width: 749px) {
    .luxury-hero-carousel-wrapper {
      min-height: 500px;
    }

    .luxury-hero-slide__content {
      padding: 2rem 1.5rem;
    }

    .luxury-hero-slide__logos {
      gap: 1rem;
      margin-bottom: 1.5rem;
      flex-wrap: wrap;
    }

    .luxury-hero-slide__logo {
      height: 30px;
    }

    .luxury-hero-slide__logo-divider {
      font-size: 1.5rem;
    }

    .luxury-hero-slide__heading {
      font-size: 2rem;
      margin-bottom: 0.75rem;
    }

    .luxury-hero-slide__subheading {
      font-size:   16px;
      margin-bottom: 1.5rem;
      letter-spacing: 0.15em;
    }

    .luxury-hero-slide__button {
      padding: 0.75rem 2rem;
      font-size: 0.75rem;
    }

    .luxury-hero-pagination {
      bottom: 1.5rem;
    }

    .luxury-hero-arrows {
      padding: 0 1rem;
    }

    .luxury-hero-arrow {
      width: 40px;
      height: 40px;
    }
  }

  @media screen and (max-width: 480px) {
    .luxury-hero-carousel-wrapper {
      height: 80vh;
      min-height: 450px;
    }

    .luxury-hero-slide__logo {
      height: 25px;
    }
  }
{% endstylesheet %}

