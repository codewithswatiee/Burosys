<section id="{{ section.id }}" class="accomplishments section--{{ section.settings.scheme }}">
	<div class="accomplishments__inner">
		{% if section.settings.small_heading != blank %}
			<p class="accomplishments__eyebrow">{{ section.settings.small_heading }}</p>
		{% endif %}

		{% if section.settings.heading != blank %}
			<h2 class="accomplishments__heading">{{ section.settings.heading }}</h2>
		{% endif %}

		<div class="accomplishments__grid">
			{% for block in section.blocks %}
				<article id="block-{{ block.id }}" class="accomplishments__item">
					{% if block.settings.image %}
						<div class="accomplishments__media">
							<img src="{{ block.settings.image | img_url: '2048x' }}" alt="{{ block.settings.title }}">
						</div>
					{% endif %}

					<div class="accomplishments__meta">
						{% if block.settings.sku != blank %}
							<div class="accomplishments__sku">{{ block.settings.sku }}</div>
						{% endif %}

						{% if block.settings.title != blank %}
							<h3 class="accomplishments__title">{{ block.settings.title }}</h3>
						{% endif %}

						{% if block.settings.subtitle != blank %}
							<div class="accomplishments__subtitle">{{ block.settings.subtitle }}</div>
						{% endif %}
					</div>
				</article>
			{% endfor %}
		</div>
	</div>

	<style>
		.section--dark{background:#000;color:#fff;padding:56px 20px}
		.section--light{background:#fff;color:#111;padding:56px 20px}
		.section--transparent{background:transparent;color:#fff;padding:56px 20px}

		.accomplishments__eyebrow{letter-spacing:.27em;font-size:14px;margin:0 0 12px 0;opacity:.7;text-transform: uppercase;}
		.accomplishments__heading{font-size:36px;margin:0 0 24px 0; text-transform: uppercase;font-weight: 400;}

		.accomplishments__grid{display:grid;grid-template-columns:repeat(3,1fr);gap:28px}
		.accomplishments__item{display:flex;flex-direction:column}
		.accomplishments__media{background:#111;}
		.accomplishments__media img{display:block;width:100%;height:313px}

		.accomplishments__sku{font-size:14px;color: #9A9A9A;margin-top:8px}
		.accomplishments__title{font-size:24px;margin:6px 0; font-weight: 400; text-transform: uppercase;}
		.accomplishments__subtitle{font-size:14px;opacity:.85}

		@media (max-width: 900px){
            .accomplishments__eyebrow{font-size:12px;letter-spacing:.2em}
            .accomplishments__heading{font-size:28px}
            .accomplishments__sku{font-size:12px;}
            .accomplishments__media img{height:237px}
            .accomplishments__title{font-size:22px}
			.accomplishments__grid{grid-template-columns:repeat(2,1fr)}
		}
		@media (max-width: 560px){
			.accomplishments__grid{grid-template-columns:1fr}
			.accomplishments__heading{font-size:28px}
		}
	</style>

	{% schema %}
	{
		"name": "Accomplishments",
		"settings": [
			{
				"type": "select",
				"id": "scheme",
				"label": "Color scheme",
				"default": "dark",
				"options": [
					{ "value": "dark", "label": "Dark" },
					{ "value": "light", "label": "Light" },
					{ "value": "transparent", "label": "Transparent" }
				]
			},
			{ "type": "text", "id": "small_heading", "label": "Eyebrow", "default": "ACCOMPLISHMENTS" },
			{ "type": "text", "id": "heading", "label": "Heading", "default": "IRIDESCENT FINISHES" }
		],
		"blocks": [
			{
				"type": "item",
				"name": "Item",
				"settings": [
					{ "type": "image_picker", "id": "image", "label": "Image" },
					{ "type": "text", "id": "sku", "label": "SKU", "default": "IRD-01" },
					{ "type": "text", "id": "title", "label": "Title", "default": "MIDNIGHT IRIS" },
					{ "type": "text", "id": "subtitle", "label": "Subtitle" }
				]
			}
		],
		"max_blocks": 12,
		"presets": [
			{
				"name": "Accomplishments (three items)",
				"category": "Custom",
				"blocks": [ { "type": "item" }, { "type": "item" }, { "type": "item" } ]
			}
		]
	}
	{% endschema %}
</section>

