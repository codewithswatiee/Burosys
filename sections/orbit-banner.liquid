<style>
  .orbiting-hero {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: {{ section.settings.bg_color }};
  }

  @keyframes rotate-ccw {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes rotate-cw {
    from {
      transform: rotate(360deg);
    }
    to {
      transform: rotate(0deg);
    }
  }

  .inner-orbit {
    animation: rotate-ccw {{ section.settings.inner_speed }}s linear infinite;
  }

  .outer-orbit {
    animation: rotate-cw {{ section.settings.outer_speed }}s linear infinite;
  }

  .orbit-container {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .orbit-item {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .orbit-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .center-content {
    position: relative;
    text-align: center;
    max-width: 800px;
    padding: 20px;
  }

  .hero-title {
    font-size: 36px;
    font-weight: 400;
    letter-spacing: -0.02em;
    color: {{ section.settings.text_color }};
    margin-bottom: 2rem;
    line-height: 1.2;
  }

  .hero-button {
    display: inline-block;
    padding: 12px 32px;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    font-weight: 400;
    border: none;
    cursor: pointer;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .hero-button:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .orbiting-hero {
      min-height: auto;
      padding: 60px 20px;
    }

    .orbit-item {
      transform: scale(0.7) !important;
    }
  }
</style>

<div class="orbiting-hero">
  <!-- Outer orbit container -->
  <div class="orbit-container outer-orbit" style="max-width: 1400px; max-height: 1400px;">
    {% for i in (1..16) %}
      {% assign key = 'outer_product_' | append: i %}
      {% assign product_handle = section.settings[key] %}
      {% if product_handle != blank %}
        {% assign product = all_products[product_handle] %}
        {% if product %}
          {% assign angle = i | minus: 1 | times: 22.5 %}
          <div class="orbit-item" style="width: 180px; height: 180px; --angle: {{ angle }}deg; --radius: 700px; position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%) rotate(var(--angle)) translateY(calc(var(--radius) * -1)) rotate(180deg);">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}" loading="lazy">
            {% endif %}
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>

  <!-- Inner orbit container -->
  <div class="orbit-container inner-orbit" style="max-width: 800px; max-height: 800px;">
    {% for i in (1..10) %}
      {% assign key = 'inner_product_' | append: i %}
      {% assign product_handle = section.settings[key] %}
      {% if product_handle != blank %}
        {% assign product = all_products[product_handle] %}
        {% if product %}
          {% assign angle = i | minus: 20 | times: 36 %}
          <div class="orbit-item" style="width: 150px; height: 150px; --angle: {{ angle }}deg; --radius: 450px; position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%) rotate(var(--angle)) translateY(calc(var(--radius) * -1)) rotate(180deg);">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}" loading="lazy">
            {% endif %}
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>

  <!-- Center content -->
  <div class="center-content">
    <h1 class="hero-title">{{ section.settings.heading }}</h1>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-button">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</div>

