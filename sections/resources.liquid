                {% if gallery_images != '' %}{% assign gallery_images = gallery_images | append: '|||' %}{% endif %}
                {% assign gallery_images = gallery_images | append: img_url_6 %}
              {% endif %}
              {% if block.settings.image_7 != blank %}
                {% assign img_url_7 = block.settings.image_7 | image_url: width: 1400 %}
                {% if gallery_images != '' %}{% assign gallery_images = gallery_images | append: '|||' %}{% endif %}
                {% assign gallery_images = gallery_images | append: img_url_7 %}
              {% endif %}
              {% if block.settings.image_8 != blank %}
                {% assign img_url_8 = block.settings.image_8 | image_url: width: 1400 %}
                {% if gallery_images != '' %}{% assign gallery_images = gallery_images | append: '|||' %}{% endif %}
                {% assign gallery_images = gallery_images | append: img_url_8 %}
              {% endif %}
              {% if block.settings.image_9 != blank %}
                {% assign img_url_9 = block.settings.image_9 | image_url: width: 1400 %}
                {% if gallery_images != '' %}{% assign gallery_images = gallery_images | append: '|||' %}{% endif %}
                {% assign gallery_images = gallery_images | append: img_url_9 %}
              {% endif %}
              {% if block.settings.image_10 != blank %}
                {% assign img_url_10 = block.settings.image_10 | image_url: width: 1400 %}
