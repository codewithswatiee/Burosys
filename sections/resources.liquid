{% comment %}
  Resources Section - Filterable resource library with tabs for Catalogs, 2D/3D Files, and Idea Starters
  Features: Left sidebar filters, search bar, tabbed content with resource cards
{% endcomment %}

<link href="{{ 'section-resources.css' | asset_url }}" rel="stylesheet" />

<section class="resources-section" id="section-{{ section.id }}" 
         data-customer-logged-in="{% if customer %}true{% else %}false{% endif %}"
         data-login-url="{{ routes.account_login_url }}"
         data-return-url="{{ request.path }}"
         data-full-return-url="{{ request.origin }}{{ request.path }}">
  <div class="resources-container">
    <!-- Left Sidebar Filters -->
    <aside class="resources-filters" data-active-tab="catalogs">
      <h2 class="filters-title">FILTERS</h2>

      
      
      <!-- Catalogs Filter Group -->
      <div class="filter-group" data-filter-group="catalogs" data-for-tab="catalogs">
        <button class="filter-group-header" type="button" aria-expanded="true">
          <span>Catalogs</span>
          <span class="filter-toggle">−</span>
        </button>
        <div class="filter-options">
          {% for block in section.blocks %}
            {% if block.type == 'catalog_filter' %}
              <label class="filter-option">
                <input type="checkbox" name="catalog_filter" value="{{ block.settings.filter_value | handle }}" data-filter-type="catalogs">
                <span class="filter-checkbox"></span>
                <span class="filter-label">{{ block.settings.filter_label }}</span>
              </label>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- 2D/3D Files Filter Group -->
      <div class="filter-group hidden" data-filter-group="files" data-for-tab="files">
        <button class="filter-group-header" type="button" aria-expanded="true">
          <span>2D / 3D Files</span>
          <span class="filter-toggle">−</span>
        </button>
        <div class="filter-options">
          {% for block in section.blocks %}
            {% if block.type == 'files_filter' %}
              <label class="filter-option">
                <input type="checkbox" name="files_filter" value="{{ block.settings.filter_value | handle }}" data-filter-type="files">
                <span class="filter-checkbox"></span>
                <span class="filter-label">{{ block.settings.filter_label }}</span>
              </label>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- Idea Starter Filter Group -->
      <div class="filter-group hidden" data-filter-group="ideas" data-for-tab="ideas">
        <button class="filter-group-header" type="button" aria-expanded="true">
          <span>Idea Starter</span>
          <span class="filter-toggle">−</span>
        </button>
        <div class="filter-options">
          {% for block in section.blocks %}
            {% if block.type == 'idea_filter' %}
              <label class="filter-option">
                <input type="checkbox" name="idea_filter" value="{{ block.settings.filter_value | handle }}" data-filter-type="ideas">
                <span class="filter-checkbox"></span>
                <span class="filter-label">{{ block.settings.filter_label }}</span>
              </label>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- Sort By Filter Group -->
      <div class="filter-group hidden" data-filter-group="sort" data-for-tab="catalogs,files,ideas">
        <button class="filter-group-header" type="button" aria-expanded="true">
          <span>SORT BY</span>
          <span class="filter-toggle">−</span>
        </button>
        <div class="filter-options">
          <label class="filter-option">
            <input type="radio" name="sort_by" value="name" data-filter-type="sort">
            <span class="filter-checkbox"></span>
            <span class="filter-label">Name</span>
          </label>
          <label class="filter-option">
            <input type="radio" name="sort_by" value="relevance" data-filter-type="sort" checked>
            <span class="filter-checkbox"></span>
            <span class="filter-label">Relevance</span>
          </label>
        </div>
      </div>
    </aside>

    <!-- Right Content Area -->
    <main class="resources-content">
      <!-- Search Bar -->
      <div class="resources-search">
        <div class="search-input-wrapper">
          <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
          <input type="text" class="search-input" placeholder="Search for resources" id="resources-search-input">
        </div>
      </div>

      <!-- Tabs Navigation -->
      <div class="resources-tabs">
        <button class="resources-tab active" data-tab="catalogs" type="button">CATALOGS</button>
        <button class="resources-tab" data-tab="files" type="button">2D/3D FILES</button>
        <button class="resources-tab" data-tab="ideas" type="button">IDEA STARTER</button>
      </div>

      <!-- Mobile inline actions: Sort | Filter (visible on small screens) -->
      <div class="mobile-actions" aria-hidden="false">
        <button class="mobile-sort-btn" type="button">Sort</button>
        <span class="mobile-actions-divider">|</span>
        <button class="mobile-filter-btn" type="button" aria-label="Toggle filters" onclick="document.querySelector('.mobile-filter-toggle').click()">Filter</button>
      </div>

      <!-- Tab Content - Catalogs -->
      <div class="resources-grid-wrapper" data-tab-content="catalogs">
        <div class="resources-grid">
          {% for block in section.blocks %}
            {% if block.type == 'catalog_item' %}
              <div class="resource-card" 
                   data-filters="{{ block.settings.filters | handle }}"
                   data-name="{{ block.settings.title | downcase }}"
                   {{ block.shopify_attributes }}>
                <a href="{{ block.settings.download_url }}" class="resource-card-link" target="_blank" rel="noopener">
                  <div class="resource-card-image">
                    {% if block.settings.image != blank %}
                      <img src="{{ block.settings.image | image_url: width: 400 }}" 
                           alt="{{ block.settings.title | escape }}"
                           loading="lazy"
                           width="300"
                           height="400">
                    {% else %}
                      <div class="resource-placeholder">
                        <span>{{ block.settings.title | truncate: 20 }}</span>
                      </div>
                    {% endif %}
                  </div>
                </a>
                <p class="resource-card-title">{{ block.settings.title }}</p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- Tab Content - 2D/3D Files -->
      <div class="resources-grid-wrapper hidden" data-tab-content="files">
        <div class="resources-grid">
          {% for block in section.blocks %}
            {% if block.type == 'file_item' %}
              <div class="resource-card" 
                   data-filters="{{ block.settings.filters | handle }}"
                   data-name="{{ block.settings.title | downcase }}"
                   {{ block.shopify_attributes }}>
                <a href="{{ block.settings.download_url }}" class="resource-card-link" target="_blank" rel="noopener">
                  <div class="resource-card-image">
                    {% if block.settings.image != blank %}
