<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} side-image-text-section spacing-style" style="{%- render 'spacing-style', settings: section.settings -%}">
  <div class="side-image-text__inner {% if section.settings.reversed %}is-reversed{% endif %}">
    <div class="side-image-text__media">
      {% if section.settings.image != blank %}
        <img
          srcset="{% if section.settings.image.width >= 750 %}{{ section.settings.image | image_url: width: 750 }} 750w,{% endif %} {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
          src="{{ section.settings.image | image_url: width: 1500 }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          class="side-image-text__img"
        >
        {% if section.settings.enable_overlay %}
          <div class="side-image-text__overlay" style="--overlay-color: {{ section.settings.overlay_color }}; --overlay-opacity: {{ section.settings.overlay_opacity }}%"></div>
        {% endif %}
      {% else %}
        <div class="side-image-text__placeholder">{{ 'placeholder' | placeholder_svg_tag: 'placeholder-svg' }}</div>
      {% endif %}
    </div>

    <div class="side-image-text__content">
      {% if section.settings.kicker != blank %}
        <div class="side-image-text__kicker">{{ section.settings.kicker }}</div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="side-image-text__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="side-image-text__text">{{ section.settings.text }}</div>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
    .side-image-text-section{
        padding: 30px 0;
        background: #000 !important;
    }
  .side-image-text__inner {
    display: grid;
    grid-template-columns: 1fr 420px;
    gap: 2rem;
    align-items: center;
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .side-image-text__media {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 420px;
    overflow: hidden;
  }

  .side-image-text__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transform: translateZ(0);
  }

  .side-image-text__overlay {
    position: absolute;
    inset: 0;
    background-color: var(--overlay-color, #fff);
    opacity: calc(var(--overlay-opacity, 30) / 100);
    pointer-events: none;
  }

  .side-image-text__content {
    padding: 0 32px;
  }

  .side-image-text__kicker {
    font-size: 12px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #9A9A9A;
    margin-bottom: 0.5rem;
  }

  .side-image-text__heading {
    font-size: 62px;
    line-height: 1.05;
    margin: 0 0 1rem 0;
    font-weight: 400;
    font-family: 'britney' !important;
    color: #fff;
    text-transform: capitalize;
  }

  .side-image-text__text {
    font-size: 16px;
    color: #9A9A9A;
    margin-bottom: 1.5rem;
    max-width: 30ch;
    text-transform: none;
  }

  /* Reversed layout (image on right) */
  .side-image-text__inner.is-reversed {
    direction: rtl;
  }
  .side-image-text__inner.is-reversed > * {
    direction: ltr;
  }

  /* Responsive: stack on small screens */
  @media screen and (max-width: 749px) {
    .side-image-text__inner {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .side-image-text__media {
      min-height: 320px;
    }

    .side-image-text__content {
      padding: 0;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Side Image + Text",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "Width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Side image"
    },
    {
      "type": "checkbox",
      "id": "reversed",
      "label": "Reverse layout (image on right)",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_overlay",
      "label": "Enable overlay on image",
      "default": false
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "default": 30
    },
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker / category"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Filotto Collection"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Body text",
      "default": "Where precision meets artistry. Italian slate, chrome accents, and transparent glass redefine the game."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Side Image + Text",
      "category": "Image"
    }
  ]
}
{% endschema %}