{% liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign heading_size = section.settings.heading_size
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} image-cards-grid color-{{ section.settings.color_scheme }} spacing-style"
  style="
    {%- render 'spacing-style', settings: section.settings -%}
    {% render 'border-override', settings: section.settings %}
    --card-radius: {{ section.settings.card_border_radius | default: 16 }}px;
    --header-align: {{ section.settings.header_alignment | default: 'center' }};
  "
>
  <div class="image-cards-grid__container">
    {% if heading != blank or subheading != blank %}
      <div class="image-cards-grid__header">
        {% if heading != blank %}
          <h2 class="image-cards-grid__heading {{ heading_size }}">
            {{ heading }}
          </h2>
        {% endif %}
        {% if subheading != blank %}
          <p class="image-cards-grid__subheading">
            {{ subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div
      class="image-cards-grid__cards"
      style="--columns-desktop: {{ columns_desktop }}; --columns-mobile: {{ columns_mobile }};"
    >
      {% for block in section.blocks %}
        <div class="image-card" {{ block.shopify_attributes }}>
          <div class="image-card__inner">
            {% if block.settings.image != blank %}
              <div class="image-card__image-wrapper">
                {{
                  block.settings.image
                  | image_url: width: 1200
                  | image_tag: loading: 'lazy', class: 'image-card__image', widths: '400, 600, 800, 1000, 1200'
                }}
              </div>
            {% else %}
              <div class="image-card__image-wrapper image-card__image-wrapper--placeholder">
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}

            <div class="image-card__content">
              {% if block.settings.label != blank %}
                <p class="image-card__label">{{ block.settings.label }}</p>
              {% endif %}

              {% if block.settings.title != blank %}
                <h3 class="image-card__title {{ block.settings.title_style }}">
                  {{ block.settings.title }}
                </h3>
              {% endif %}

              {% if block.settings.button_label != blank %}
                <div class="image-card__button-wrapper">
                  <a
                    href="{{ block.settings.button_link | default: '#' }}"
                    class="image-card__button button button--{{ block.settings.button_style }}"
                  >
                    {{ block.settings.button_label }}
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}

  /* Ensure this section's background element picks up the color scheme variables */
  .section-background.color-{{ section.settings.color_scheme }} {
    background-color: var(--color-background);
  }

  .image-cards-grid__header {
    text-align: var(--header-align, center);
    margin-bottom:40px;
  }

  .image-cards-grid__heading {
    margin-bottom: var(--spacing-sm);
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .image-cards-grid__heading.h0 {
    font-size: clamp(2rem, 4vw, 3.5rem);
  }

  .image-cards-grid__heading.h1 {
    font-size: clamp(1.75rem, 3.5vw, 3rem);
  }

  .image-cards-grid__heading.h2 {
    font-size: 36px;
    line-height: 100%;
    letter-spacing: 2epx;
    font-weight: 400;
  }

  .image-cards-grid__heading.h3 {
    font-size: clamp(1.25rem, 2.5vw, 2rem);
  }

  .image-cards-grid__subheading {
    font-size: 16px;
    color: #FFFFFFCC;
    margin: 20px 0;
  }

  .image-cards-grid__cards {
    display: grid;
    grid-template-columns: repeat(var(--columns-desktop, 3), 1fr);
    gap: 20px;
  }

  @media screen and (min-width: 990px) {
    .image-cards-grid__cards {
      gap: 24px;
    }
  }

  .image-card {
    position: relative;
    overflow: hidden;
  }

  .image-card__inner {
    position: relative;
    height: 100%;
    border-radius: var(--card-radius, 16px);
    overflow: hidden;
  }

  .image-card__image-wrapper {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .image-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .image-card:hover .image-card__image {
    transform: scale(1.05);
  }

  .image-card__image-wrapper--placeholder {
    background-color: rgba(var(--color-foreground), 0.1);
  }

  .image-card__image-wrapper--placeholder svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  .image-card__content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    min-height: 770px;
    padding: 60px 40px;
    text-align: center;
    color: white;
  }

  .image-card__label {
    font-size: clamp(0.75rem, 1vw, 0.875rem);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin: 0;
    font-weight: 400;
  }

  .image-card__title {
    font-size: clamp(2rem, 3.5vw, 3.5rem);
    font-weight: 400;
    margin: 0;
    line-height: 1.2;
  }

  .image-card__title.title-italic {
    font-style: italic;
    font-family: 'britney' !important;
  }

  .image-card__title.title-normal {
    font-style: normal;
  }

  .image-card__button-wrapper {
    margin-top: auto;
  }

  .image-card__button {
    padding: 12px 32px;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .button--primary {
    background-color: white;
    color: black;
    border: none;
  }

  .button--primary:hover {
    background-color: rgba(255, 255, 255, 0.9);
  }

  .button--secondary {
    background-color: transparent;
    color: white;
    border: 2px solid white;
  }

  .button--secondary:hover {
    background-color: white;
    color: black;
  }

  @media screen and (max-width: 989px) {
    .image-cards-grid__cards {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .image-card__inner {
      border-radius: calc(var(--card-radius, 16px) * 0.75);
    }

    .image-card__content {
      min-height: 280px;
      padding: 32px 24px;
    }

    .image-card__title {
      font-size: clamp(2rem, 6vw, 3rem);
    }

    .image-card__label {
      font-size: 0.75rem;
      letter-spacing: 0.12em;
    }

    .image-card__button {
      padding: 10px 28px;
      font-size: 12px;
      color: white !important;
      text-transform: uppercase !important;
      background-color: transparent !important;
    }
    .image-card__button:hover {
      text-decoration: underline;
      background-color: transparent !important;
    }
  }

  @media screen and (max-width: 749px) {
    .image-cards-grid__header {
      margin-bottom: 24px;
    }



    .image-cards-grid__heading.h2 {
      font-size: 28px;
    }

    .image-cards-grid__subheading {
      font-size: 14px;
      margin: 16px 0;
    }

    .image-cards-grid__cards {
      gap: 12px;
    }

    .image-card__inner {
      border-radius: calc(var(--card-radius, 16px) * 0.5);
    }

    .image-card__content {
      min-height: 240px;
      padding: 24px 20px;
    }

    .image-card__label {
      font-size: 0.6875rem;
      letter-spacing: 0.1em;
    }

    .image-card__title {
      font-size: clamp(1.75rem, 7vw, 2.5rem);
      margin: 8px 0;
    }

    .image-card__button {
      padding: 10px 28px;
      font-size: 12px;
      color: white !important;
      text-transform: uppercase !important;
      background-color: transparent !important;
    }
    .image-card__button:hover {
      text-decoration: underline;
      background-color: transparent !important;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Image Cards Grid",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "EXPLORE ELEVATED SPACES"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore chairs tailored to your interests"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        {
          "value": "h0",
          "label": "Extra Large"
        },
        {
          "value": "h1",
          "label": "Large"
        },
        {
          "value": "h2",
          "label": "Medium"
        },
        {
          "value": "h3",
          "label": "Small"
        }
      ],
      "default": "h2"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Columns on Desktop",
      "default": 3
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on Mobile",
      "options": [
        {
          "value": "1",
          "label": "1 Column"
        },
        {
          "value": "2",
          "label": "2 Columns"
        }
      ],
      "default": "1"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "options": [
        {
          "value": "page-width",
          "label": "Page Width"
        },
        {
          "value": "full-width",
          "label": "Full Width"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "card_border_radius",
      "label": "Card border radius (px)",
      "min": 0,
      "max": 64,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "select",
      "id": "header_alignment",
      "label": "Header alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Image Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label (Top Text)",
          "default": "ELEVATED SPACES"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Prismatica"
        },
        {
          "type": "select",
          "id": "title_style",
          "label": "Title Style",
          "options": [
            {
              "value": "title-italic",
              "label": "Italic (Serif)"
            },
            {
              "value": "title-normal",
              "label": "Normal"
            }
          ],
          "default": "title-italic"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "DISCOVER MORE"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "options": [
            {
              "value": "primary",
              "label": "Primary (Solid)"
            },
            {
              "value": "secondary",
              "label": "Secondary (Outline)"
            }
          ],
          "default": "primary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Cards Grid",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "label": "ELEVATED SPACES",
            "title": "Prismatica",
            "title_style": "title-italic",
            "button_label": "DISCOVER MORE"
          }
        },
        {
          "type": "card",
          "settings": {
            "label": "ELEVATED SPACES",
            "title": "Soft Partition",
            "title_style": "title-italic",
            "button_label": "DISCOVER MORE"
          }
        },
        {
          "type": "card",
          "settings": {
            "label": "ELEVATED SPACES",
            "title": "Gaming Tables",
            "title_style": "title-italic",
            "button_label": "DISCOVER MORE"
          }
        }
      ]
    }
  ]
}
{% endschema %}
