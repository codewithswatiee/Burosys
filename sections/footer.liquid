<footer class="site-footer color-{{ section.settings.color_scheme }}">
  <div class="wrap">
    <div class="footer__menus">
      {% assign menu_setting = section.settings.menu %}
      {% if menu_setting != blank and linklists[menu_setting] %}
        {% assign footer_menu = linklists[menu_setting] %}
        {% assign groups = footer_menu.links %}
        {% assign total = groups.size %}

        {% if total <= 4 %}
          {% for group in groups %}
            <nav class="footer__menu" aria-label="{{ group.title }}">
              <h4 class="footer__menu-title">{{ group.title }}</h4>
              <ul class="footer__menu-list">
                {% if group.links and group.links.size > 0 %}
                  {% for item in group.links %}
                    <li class="footer__menu-item"><a href="{{ item.url }}" class="footer__menu-link">{{ item.title }}</a></li>
                  {% endfor %}
                {% else %}
                  <li class="footer__menu-item"><a href="{{ group.url }}" class="footer__menu-link">{{ group.title }}</a></li>
                {% endif %}
              </ul>
            </nav>
          {% endfor %}
        {% else %}
          {%- comment -%} Render first three groups in their own columns {%- endcomment -%}
          {% for i in (0..2) %}
            {% assign group = groups[i] %}
            <nav class="footer__menu" aria-label="{{ group.title }}">
              <h4 class="footer__menu-title">{{ group.title }}</h4>
              <ul class="footer__menu-list">
                {% if group.links and group.links.size > 0 %}
                  {% for item in group.links %}
                    <li class="footer__menu-item"><a href="{{ item.url }}" class="footer__menu-link">{{ item.title }}</a></li>
                  {% endfor %}
                {% else %}
                  <li class="footer__menu-item"><a href="{{ group.url }}" class="footer__menu-link">{{ group.title }}</a></li>
                {% endif %}
              </ul>
            </nav>
          {% endfor %}

          {%- comment -%} Stack remaining groups inside the last column {%- endcomment -%}
          <div class="footer__menu footer__menu--stacked" aria-label="More links">
            {% assign last_index = total | minus: 1 %}
            {% for j in (3..last_index) %}
              {% assign group = groups[j] %}
              <div class="footer__menu-block">
                <h4 class="footer__menu-title">{{ group.title }}</h4>
                <ul class="footer__menu-list">
                  {% if group.links and group.links.size > 0 %}
                    {% for item in group.links %}
                      <li class="footer__menu-item"><a href="{{ item.url }}" class="footer__menu-link">{{ item.title }}</a></li>
                    {% endfor %}
                  {% else %}
                    <li class="footer__menu-item"><a href="{{ group.url }}" class="footer__menu-link">{{ group.title }}</a></li>
                  {% endif %}
                </ul>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}
    </div>

    <div class="footer__logo-wrap">
      {% if section.settings.logo != blank %}
        <div class="footer__logo" style="--logo-width: {{ section.settings.logo_width | default: 171 }}px;">
          {{ section.settings.logo | image_url: width: 1400 | image_tag: alt: section.settings.logo_alt | class: 'footer__logo-image' }}
        </div>
      {% endif %}
    </div>

    <div class="footer__bottom">
      <div class="footer__copyright">
        {{ section.settings.copyright_text }}
      </div>

      {% comment %} Social Media Icons {% endcomment %}
      <div class="footer__social">
        {% if section.settings.facebook_url != blank %}
          <a href="{{ section.settings.facebook_url }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Facebook">
            <svg width="15" height="15" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        {% endif %}
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
            <svg width="15" height="15" viewBox="0 0 24 24" fill="currentColor">
