<footer class="site-footer color-{{ section.settings.color_scheme }}">
  <div class="wrap">
    <div class="footer__menus">
      {% assign menu_setting = section.settings.menu %}
      {% if menu_setting != blank and linklists[menu_setting] %}
        {% assign footer_menu = linklists[menu_setting] %}
        {% assign groups = footer_menu.links %}
        {% assign total = groups.size %}

        {% if total <= 4 %}
          {% for group in groups %}
            <nav class="footer__menu" aria-label="{{ group.title }}">
              <h4 class="footer__menu-title">{{ group.title }}</h4>
              <ul class="footer__menu-list">
                {% if group.links and group.links.size > 0 %}
                  {% for item in group.links %}
                    <li class="footer__menu-item"><a href="{{ item.url }}" class="footer__menu-link">{{ item.title }}</a></li>
                  {% endfor %}
                {% else %}
                  <li class="footer__menu-item"><a href="{{ group.url }}" class="footer__menu-link">{{ group.title }}</a></li>
                {% endif %}
              </ul>
            </nav>
          {% endfor %}
        {% else %}
          {%- comment -%} Render first three groups in their own columns {%- endcomment -%}
          {% for i in (0..2) %}
            {% assign group = groups[i] %}
            <nav class="footer__menu" aria-label="{{ group.title }}">
              <h4 class="footer__menu-title">{{ group.title }}</h4>
              <ul class="footer__menu-list">
                {% if group.links and group.links.size > 0 %}
                  {% for item in group.links %}
                    <li class="footer__menu-item"><a href="{{ item.url }}" class="footer__menu-link">{{ item.title }}</a></li>
                  {% endfor %}
                {% else %}
                  <li class="footer__menu-item"><a href="{{ group.url }}" class="footer__menu-link">{{ group.title }}</a></li>
                {% endif %}
              </ul>
            </nav>
          {% endfor %}

          {%- comment -%} Stack remaining groups inside the last column {%- endcomment -%}
          <div class="footer__menu footer__menu--stacked" aria-label="More links">
            {% assign last_index = total | minus: 1 %}
            {% for j in (3..last_index) %}
              {% assign group = groups[j] %}
              <div class="footer__menu-block">
                <h4 class="footer__menu-title">{{ group.title }}</h4>
                <ul class="footer__menu-list">
                  {% if group.links and group.links.size > 0 %}
                    {% for item in group.links %}
                      <li class="footer__menu-item"><a href="{{ item.url }}" class="footer__menu-link">{{ item.title }}</a></li>
                    {% endfor %}
                  {% else %}
                    <li class="footer__menu-item"><a href="{{ group.url }}" class="footer__menu-link">{{ group.title }}</a></li>
                  {% endif %}
                </ul>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}
    </div>

    <div class="footer__logo-wrap">
      {% if section.settings.logo != blank %}
        <div class="footer__logo" style="--logo-width: {{ section.settings.logo_width | default: 171 }}px;">
          {{ section.settings.logo | image_url: width: 1400 | image_tag: alt: section.settings.logo_alt | class: 'footer__logo-image' }}
        </div>
      {% endif %}
    </div>

    <div class="footer__bottom">
      <div class="footer__copyright">
        {{ section.settings.copyright_text }}
      </div>

      <div class="footer__right-links">
        {% if section.settings.right_links_menu != blank and linklists[section.settings.right_links_menu] %}
          {% assign rightmenu = linklists[section.settings.right_links_menu] %}
          <ul class="footer__right-list">
            {% for item in rightmenu.links %}
              <li class="footer__right-item"><a href="{{ item.url }}" class="footer__right-link">{{ item.title }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
.site-footer {
  background: #000;
  color: #fff;
  padding: var(--spacing-lg) 0 40px;
}
.site-footer .wrap {
  margin: 0 32px;
  padding-bottom: 10px;
  padding-top: 10rem;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
}
.footer__menus {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 48px;
  margin-bottom: 40px;
}
.footer__menu-title {
  font-size: 22px;
  color: #C0C0C0;
  margin-bottom: 12px;
  font-weight: 300;
  font-family: 'matter-light' !important;
}
.footer__menu-list { list-style: none; margin:0; padding:0; }
.footer__menu-item { margin-bottom: 12px; }
.footer__menu-link { color: #fff; text-decoration: none; font-size: 28px; font-family: 'matter-light' !important;}

.footer__menu--stacked .footer__menu-block { margin-bottom: 60px; }
.footer__menu--stacked .footer__menu-block:last-child { margin-bottom: 0; }

.footer__logo-wrap { text-align: center; margin-bottom: 10px; margin-top: 12rem; }
.footer__logo-image { width: min(100%, var(--logo-width)); height: auto; display:block; margin: 0 auto; filter: brightness(1); }

.footer__bottom { display:flex; align-items:center; justify-content: space-between; gap: 16px; }
.footer__copyright { font-size: 14px; color: rgba(255,255,255,0.9); }
.footer__right-list { list-style:none; display:flex; gap: 16px; margin:0; padding:0; }
.footer__right-link { color: rgba(255,255,255,0.85); text-decoration:none; font-size: 14px; }

@media (max-width: 900px) {
  .site-footer .wrap {
    margin: 0 16px;
    padding-bottom: 10px;
    padding-top: 3rem;
  }
  .footer__menu-title { font-size: 14px; }
  .footer__menus { grid-template-columns: repeat(2, 1fr); gap: 28px; }
  .footer__menu-link { font-size: 18px; }
  .footer__logo-wrap { margin: 24px 0; }
  .footer__bottom { flex-direction: row; align-items:center; text-align:center; gap: 5px; }
  .footer__right-list { flex-wrap: wrap; justify-content:center; }
  .footer__menu--stacked .footer__menu-block{
    margin-bottom: 25px;
  }
}

@media (max-width: 480px) {
  .footer__menus { grid-template-columns: repeat(2, 1fr); gap: 58px; }
  .footer__menu-link { font-size: 16px; }
}
{% endstylesheet %}

