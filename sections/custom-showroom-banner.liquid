{{ 'section-custom-showroom-banner.css' | asset_url | stylesheet_tag }}

<div class="custom-showroom-banner">
  <div class="showroom-banner__content">
    {%- if section.settings.heading != blank -%}
      <h2 class="showroom-banner__heading">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <p class="showroom-banner__subheading">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}
  </div>

  <div class="showroom-banner__image-wrapper">
    {%- if section.settings.image_link != blank -%}
      <a href="{{ section.settings.image_link }}" class="showroom-banner__link">
    {%- endif -%}

    {%- if section.settings.image_desktop != blank -%}
      <picture>
        {%- if section.settings.image_mobile != blank -%}
          <source 
            media="(max-width: 749px)" 
            srcset="{{ section.settings.image_mobile | image_url: width: 750 }} 750w,
                    {{ section.settings.image_mobile | image_url: width: 1500 }} 1500w"
            width="{{ section.settings.image_mobile.width }}"
            height="{{ section.settings.image_mobile.height }}"
          >
        {%- endif -%}
        
        <img
          srcset="{{ section.settings.image_desktop | image_url: width: 1200 }} 1200w,
                  {{ section.settings.image_desktop | image_url: width: 1600 }} 1600w,
                  {{ section.settings.image_desktop | image_url: width: 2000 }} 2000w"
          src="{{ section.settings.image_desktop | image_url: width: 1600 }}"
          alt="{{ section.settings.image_desktop.alt | escape }}"
          loading="lazy"
          width="{{ section.settings.image_desktop.width }}"
          height="{{ section.settings.image_desktop.height }}"
          class="showroom-banner__image"
        >
      </picture>
    {%- elsif section.settings.image_mobile != blank -%}
      <img
        srcset="{{ section.settings.image_mobile | image_url: width: 750 }} 750w,
                {{ section.settings.image_mobile | image_url: width: 1500 }} 1500w"
        src="{{ section.settings.image_mobile | image_url: width: 750 }}"
        alt="{{ section.settings.image_mobile.alt | escape }}"
        loading="lazy"
        width="{{ section.settings.image_mobile.width }}"
        height="{{ section.settings.image_mobile.height }}"
        class="showroom-banner__image"
      >
    {%- else -%}
      <div class="showroom-banner__placeholder">
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}

    {%- if section.settings.image_link != blank -%}
      </a>
    {%- endif -%}
  </div>

</div>
c
<style>
  .section-custom-showroom-banner {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

{% schema %}
{
  "name": "Custom Showroom Banner",
  "tag": "section",
  "class": "section-custom-showroom-banner",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Top Text Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "EXPLORE OUR SHOWROOM"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore chairs tailored to your interests"
    },
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image",
      "info": "Optional. If not provided, desktop image will be used on mobile."
    },
    {
      "type": "url",
      "id": "image_link",
      "label": "Image Link",
      "info": "Optional. Make the image clickable."
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Custom Showroom Banner"
    }
  ]
}
{% endschema %}
