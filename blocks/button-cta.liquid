<div id="{{ section.id }}" class="button-cta-section section--{{ section.settings.section_width }} spacing-style">
  <div class="button-cta__wrap">
    <a href="{{ section.settings.button_link | default: '#' }}" class="button-cta" aria-label="{{ section.settings.button_text }}">
      <span class="button-cta__icon" aria-hidden="true">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" focusable="false">
          <path d="M12 5v14M5 12h14" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </span>
      <span class="button-cta__label">{{ section.settings.button_text | default: 'Configure' }}</span>
    </a>
  </div>

  {% stylesheet %}
  .button-cta__wrap { display:flex; justify-content:flex-start }
  .button-cta { display:inline-flex; align-items:center; gap:3px; text-decoration:none; color:#fff; background: #FF4000; padding:10px; border-radius:55px; font-size:16px; font-weight:400 }
  .button-cta__icon { display:inline-flex; width:24px; height:auto; align-items:center; justify-content:center;}
  .button-cta__icon svg{ display:block }
  .button-cta__label{ display:inline-block }

  @media (max-width:749px){
    .button-cta{ padding:10px 22px; font-size:15px }
    .button-cta__icon{ width:20px; height:auto }
  }
  {% endstylesheet %}

  {% schema %}
  {
    "name": "Button CTA",
    "settings": [
      { "type": "select", "id": "section_width", "label": "Width", "options": [ { "value": "page-width", "label": "Page width" }, { "value": "full-width", "label": "Full width" } ], "default": "page-width" },
      { "type": "text", "id": "button_text", "label": "Button text", "default": "Configure" },
      { "type": "url", "id": "button_link", "label": "Button link" }
    ],
    "presets": [ { "name": "Button CTA", "category": "Basic" } ]
  }
  {% endschema %}
</div>
