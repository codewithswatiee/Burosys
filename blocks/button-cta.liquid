<script>
(function() {
  // Wait for DOM to be ready
  function initButtonCTA() {
    var wrapper = document.getElementById('{{ section.id }}');
    if (!wrapper) return;

    var btn = wrapper.querySelector('.button-cta');
    var modal = wrapper.querySelector('.button-cta-modal');
    
    if (!btn || !modal) return;

    var modalBody = modal.querySelector('.button-cta-modal-body');
    var lastFocused = null;

    function openModal() {
      lastFocused = document.activeElement;
      modal.style.display = 'flex';
      modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';

      // Focus management for accessibility
      setTimeout(function() {
        var firstInput = modal.querySelector('input, select, textarea');
        if (firstInput) firstInput.focus();
      }, 100);
    }

    function closeModal() {
      modal.style.display = 'none';
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      if (lastFocused) lastFocused.focus();
    }

    // Button click handler - always opens modal
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      openModal();
    });

    // Close modal handlers
    var closeElements = modal.querySelectorAll('[data-action="close"]');
    closeElements.forEach(function(element) {
      element.addEventListener('click', function(e) {
        e.preventDefault();
        closeModal();
      });
    });

    // ESC key handler
    document.addEventListener('keydown', function(e) {
      if ((e.key === 'Escape' || e.key === 'Esc') && modal.getAttribute('aria-hidden') === 'false') {
        closeModal();
      }
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initButtonCTA);
  } else {
    initButtonCTA();
  }
})();
